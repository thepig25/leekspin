<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/ab_lay"
    >
    <ImageView
	android:id="@+id/img1"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:src="@drawable/table1"
	>
	</ImageView>
	<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/card1"
    android:layout_x="15px"
    android:layout_y="170px"
    />
    <ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/card2"
    android:layout_x="75px"
    android:layout_y="170px"
    />
    <ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/card3"
    android:layout_x="135px"
    android:layout_y="170px"
    />
    <ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/card4"
    android:layout_x="195px"
    android:layout_y="170px"
    />
    <ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"  
    android:id="@+id/card5"
    android:layout_x="255px"
    android:layout_y="170px"
    />
	<ImageView
	android:id="@+id/pcard1"
	android:src="@drawable/card"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_x="180px"
	android:layout_y="270px">
	</ImageView>
	<ImageView
	android:id="@+id/pcard2"
	android:src="@drawable/card"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_x="240px"
	android:layout_y="270px">
	</ImageView>
	<TextView
	android:id="@+id/tv1"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:layout_x="0px"
	android:lines="4"
	android:background="@drawable/white"
	android:layout_y="345px"
	android:textColor="#ff000000"
	android:scrollbars="vertical"
	android:scrollbarAlwaysDrawVerticalTrack="true"
	android:focusable="true"
	android:focusableInTouchMode="true"
	android:maxLines="100">
	</TextView>
	<ImageButton
	android:id="@+id/but_check"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:src="@drawable/check_button"
	android:layout_y="415px"
	android:layout_x="243px">
	</ImageButton>
	<ImageButton
	android:id="@+id/but_fold"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:src="@drawable/fold_button"
	android:layout_y="415px" android:layout_x="166px">
	</ImageButton>
	<ImageButton
	android:id="@+id/but_call"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:src="@drawable/call_button"
	android:layout_y="415px" android:layout_x="88px">
	</ImageButton>
	<ImageButton
	android:id="@+id/but_raise"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:src="@drawable/raise_button"
	android:layout_x="10px" android:layout_y="415px">
	</ImageButton>
</AbsoluteLayout>
