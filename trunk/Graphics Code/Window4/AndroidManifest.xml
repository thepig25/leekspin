<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.poker"
      android:versionCode="1"
      android:versionName="1.0.0">
    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name=".MenuWindow"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".GameWindow"
                  android:label="Game">
            <intent-filter>
                <action android:name="com.poker.action.GAME" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".RaiseWindow"
                  android:label="Raise"
                  android:theme="@android:style/Theme.Dialog">
            <intent-filter>
                <action android:name="com.poker.action.RAISE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".StartWindow"
                  android:label="Start"
                  android:theme="@android:style/Theme.Dialog">
            <intent-filter>
                <action android:name="com.poker.action.START" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>
</manifest> 