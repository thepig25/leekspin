<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/ab_lay"
    >
    <ImageView
	android:id="@+id/img1"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:src="@drawable/table2"
	>
	</ImageView>
	<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/card1"
    android:layout_x="15px"
    android:layout_y="170px"
    />
    <ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/card2"
    android:layout_x="75px"
    android:layout_y="170px"
    />
    <ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/card3"
    android:layout_x="135px"
    android:layout_y="170px"
    />
    <ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/card4"
    android:layout_x="195px"
    android:layout_y="170px"
    />
    <ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"  
    android:id="@+id/card5"
    android:layout_x="255px"
    android:layout_y="170px"
    />
	<ImageView
	android:id="@+id/pcard1"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_x="180px"
	android:layout_y="270px">
	</ImageView>
	<ImageView
	android:id="@+id/pcard2"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_x="240px"
	android:layout_y="270px">
	</ImageView>
	<TextView
	android:id="@+id/tv1"
	android:layout_height="wrap_content"
	android:text=""
	android:background="@drawable/white"
	android:layout_width="wrap_content"
	android:layout_y="60px"
	android:layout_x="310px"
	android:width="165px"
	android:maxLines="6"
	android:lines="6">
	</TextView>
	<Button
	android:id="@+id/but_start"
	android:text="Start Game" android:layout_x="300px" android:layout_width="170px" android:layout_height="70px" android:layout_y="230px">
	</Button>
</AbsoluteLayout>
